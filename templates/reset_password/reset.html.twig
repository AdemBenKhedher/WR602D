{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .reset-password-container {
            max-width: 500px;
            margin: 3rem auto;
            padding: 2.5rem;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        }
        
        .reset-password-container h1 {
            color: #2c3e50;
            text-align: center;
            margin-bottom: 2rem;
            font-weight: 700;
            font-size: 1.8rem;
        }
        
        .form-group {
            margin-bottom: 1.8rem;
        }
        
        .form-label {
            font-weight: 600;
            color: #2c3e50;
            display: block;
            margin-bottom: 0.6rem;
            font-size: 0.95rem;
            letter-spacing: 0.3px;
        }
        
        .form-control {
            border-radius: 6px;
            padding: 0.9rem 1rem;
            border: 2px solid #e0e0e0;
            width: 100%;
            transition: all 0.3s ease;
            font-size: 1rem;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }
        
        .form-control:focus {
            border-color: #6a11cb;
            box-shadow: 0 0 0 3px rgba(106, 17, 203, 0.2);
            outline: none;
        }
        
        .btn-reset {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 0.9rem 1rem;
            border: none;
            border-radius: 6px;
            width: 100%;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            cursor: pointer;
            box-shadow: 0 4px 10px rgba(37, 117, 252, 0.3);
            letter-spacing: 0.5px;
            margin-top: 1rem;
        }
        
        .btn-reset:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(37, 117, 252, 0.4);
        }
        
        .btn-reset:active {
            transform: translateY(0);
        }
        
        .form-error {
            color: #e74c3c;
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: block;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="reset-password-container">
        <h1>Réinitialiser votre mot de passe</h1>

        {{ form_start(resetForm) }}
            <div class="form-group">
                {{ form_label(resetForm.plainPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nouveau mot de passe'}}) }}
                {{ form_errors(resetForm.plainPassword, {'attr': {'class': 'form-error'}}) }}
            </div>
            <button type="submit" class="btn btn-reset">Réinitialiser le mot de passe</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
